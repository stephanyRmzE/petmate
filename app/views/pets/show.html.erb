<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
        <div class="container">
          <div class = card>
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @pet.photo.url %>)">
            </div>
            <div class = "card-description">
              <h2><%= @pet.name %></h2>
              <p>Is a <%= @pet.breed.downcase %> <%= @pet.species.downcase %> <%= @pet.age %> years old </p>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
