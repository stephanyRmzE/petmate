<h2 class="pet-title m-4"><%= @pet.name %></h2>

<div class="d-flex mt-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col">
        <div class="cards m-2">
          <% @pet.photos.each do |photo| %>
          <div class="card-category" style="background-image: url(<%= cl_image_path(photo.key) %>)"></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-description">
        <div class="col-cards">
          <h4>🐾 Owner:</h4>
          <p class="pet-details px-4"> <%= @pet.user.first_name %> <%= @pet.user.last_name %> </p>
        </div>
        <div class="col-cards">
          <h4>🐾 Breed:</h4>
          <p class="pet-details px-4"> <%= @pet.breed %> </p>
        </div>
        <div class="col-cards">
          <h4>🐾 Species:</h4>
          <p class="pet-details px-4"> <%= @pet.species %> </p>
        </div>
        <div class="col-cards">
          <h4>🐾 Age:</h4>
          <p class="pet-details px-4"> <%= @pet.age %> years old. </p>
        </div>
        <div class="col-cards">
          <h4>🐾 Description:</h4>
          <p class="pet-details px-4"> <%= @pet.description %></p>
        </div>
        <div class="d-flex justify-content-center">
          <% if policy(@pet).edit? %>
            <h2 class="m-3"><%= link_to 'Edit', edit_pet_path(@pet), class: "btn btn-outline-warning" %></h2>
          <% end %>
          <% if policy(@pet).destroy? %>
            <h2 class="m-3"><%= link_to 'Remove', pet_path(@pet), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></h2>
          <% end %>
          <% if policy(@pet).rent? %>
            <h2 class="m-3"><%= link_to 'Rent', new_pet_reservation_path(@pet), class: "btn btn-outline-success" %></h2>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
