<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
        <div class="container">
          <div class = card>
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(@pet.photo.key)%>)">
            </div>
            <div class = "card-description">
              <h2><%= @pet.name %></h2>
              <p>Is a <%= @pet.breed.downcase %> <%= @pet.species.downcase %> <%= @pet.age %> years old </p>
              <% if @pet.user == current_user %>
                <div class = "card-edit">
                  <%= link_to 'Edit', edit_pet_path(@pet) %>
                  <%= link_to 'Update', @pet %>
                  <%= link_to 'Destroy', @pet, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
