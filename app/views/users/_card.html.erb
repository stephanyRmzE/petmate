<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
        <div class="container">
          <div class = card>
            <div class="card-image" style="background-image: url(<%= cl_image_path(@pet.photo.key)%>)">
            </div>
            <div class = "card-description">
              <h2>You're a reservation with <%= @pet.name %></h2>
              <p><%= @reservation.start_date %> - <%= @reservation.end_date %></p>
              <div class="card-action">
                  <% if policy(@reservation).edit? %>
                    <h2><%= link_to 'Edit', edit_pet_path(@pet) %></h2>
                  <% end %>
                  <% if policy(@reservation).destroy? %>
                    <h2><%= link_to 'Destroy', reservation_path(@reservation), method: :delete, data: { confirm: 'Are you sure?' } %></h2>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
