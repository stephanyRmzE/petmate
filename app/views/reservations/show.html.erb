<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
        <div class="container">
          <div class = card>
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(@pet.photo.key)%>)"></div>
            <div class = "card-description">
              <h2><%= @pet.name %></h2>
              <p>Rented from <%= @reservation.start_date %> - <%= @reservation.end_date%></p>
              <div class="card-action">
                  <% if policy(@reservation).edit? %>
                    <h2><%= link_to 'Edit', edit_pet_reservation_path(@reservation) %></h2>
                  <% end %>
                  <% if policy(@reservation).destroy? %>
                    <h2><%= link_to 'Destroy', pet_reservation_path(@reservation), method: :delete, data: { confirm: 'Are you sure?' } %></h2>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
